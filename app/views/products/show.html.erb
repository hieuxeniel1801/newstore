<h1><%= @product.name %></h1>
<%= render "inventory", product: @product %>

<p class="product-description"><%= @product.description %></p>

<% if @product.featured_image.attached? %>
  <%= image_tag @product.featured_image, class: "product-image" %>
<% end %>

<div class="action-buttons">
  <%= link_to "Back", products_path, class: "back-link" %>
  <%= link_to "Edit", edit_product_path(@product), class: "edit-link" %>
  <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "delete-button" %>
</div>
